<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.forkan.countdowndemo.MainActivity">

    <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
        android:id="@+id/circular_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:m_arc_stroke_color="@android:color/holo_blue_dark"
        app:m_cicle_stroke_width="14"
        app:m_circle_radius="75"
        app:m_circle_stroke_color="@color/colorAccent" />

    <Button
        android:id="@+id/start"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FF5722"
        android:onClick="startTimer"
        android:text="Start"
        android:textColor="#FFF" />



    <Button
        android:id="@+id/pause"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FF5722"
        android:onClick="pauseTimer"
        android:text="pause"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/resume"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FF5722"
        android:onClick="resumeTimer"
        android:text="resume"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/stop"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FF5722"
        android:onClick="stopTimer"
        android:text="Stop"
        android:textColor="#FFF" />


</LinearLayout>